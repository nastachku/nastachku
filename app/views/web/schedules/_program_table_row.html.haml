- @halls.each_with_index do |hall, i|
  - if hall.has_begin_lecture?(i_time)
    %td{ rowspan: hall.slot_at_the_time(i_time).decorate.duration / 5, data: { hall: i + 1 }, id: "slot-#{ hall.slot_at_the_time(i_time).event.id }" }
      = render "lecture", lecture: hall.slot_at_the_time(i_time).event.decorate
  - elsif hall.has_not_slots?(i_time)
    %td{data: { hall: i + 1 } }
%td{ style: "border-left: 0px;" }
