!!!
%html{ lang: "ru" }
  %head
    %meta{ content: "IE=edge", "http-equiv" => "X-UA-Compatible" }
    %meta{ content: "width=device-width, initial-scale=1.0", name: "viewport" }
    %title Стачка!
    %link{ href: "/favicon.ico", rel: "icon", type: "image/x-icon" }
    %link{ href: "/favicon.ico", rel: "shortcut icon", type: "image/x-icon" }
    %meta{ charset: "utf-8" }
    %meta{ content: "Digital-коммуникации, Программирование, IT-стартапы, Электронная коммерция, Менеджмент в IT, IT на службе общества", name: "description" }
    %meta{ content: "Главная | Стачка!", name: "keywords" }
    %meta{ content: "http://nastachku.ru/", property: "og:url" }
    %meta{ content: "Главная | Стачка!", property: "og:title" }
    %meta{ content: "Digital-коммуникации, Программирование, IT-стартапы, Электронная коммерция, Менеджмент в IT, IT на службе общества", property: "og:description" }
    %meta{ content: "website", property: "og:type" }
    %meta{ content: "Стачка!", property: "og:site_name" }
    %meta{ content: "i/og_image.png", property: "og:image" }
    = stylesheet_link_tag "web/application"
    = javascript_include_tag "application"
    %script{ src: "http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js", type: "text/javascript" }
    %script{ src: "/assets/jquery.touchcarousel-1.2.min.js", type: "text/javascript" }
    %script{ src: "/assets/owl.carousel.min.js", type: "text/javascript" }
  %body
    #layout
      = render "layouts/web/shared/header"
      = render "layouts/web/shared/plaha"
      = bootstrap_flash
      = yield
      - unless params[:controller] == 'web/accounts'
        = render "layouts/web/shared/organizers"
        = render "layouts/web/shared/sponsors"
        = render "layouts/web/shared/partners"
        = render "layouts/web/shared/info_partners"
      = render "layouts/web/shared/footer"
      = render "layouts/web/shared/popup_auth"
